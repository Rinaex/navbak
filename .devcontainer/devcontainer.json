{
  "name": "ruby-3-jekyll-3.9.3",
  "build": {
    // "dockerfile": "Dockerfile"
    "dockerfile": "Dockerfile-jekyll"
  },
  "appPort": 4000,
  "postCreateCommand": "mkdir -p /root/.ssh && cp -r /root/.ssh-host/* /root/.ssh && chmod 700 /root/.ssh && chmod 600 /root/.ssh/* && bundle install",
  "postStartCommand": "jekyll serve",
  "mounts": [
    "source=${env:HOME}${env:USERPROFILE}/.ssh/id_rsa,target=/root/.ssh-host/id_rsa,type=bind,consistency=cached,ro"
  ],
  // "runArgs": [
  //   "-v",
  //   "${env:HOME}${env:USERPROFILE}/.ssh/id_rsa:/root/.ssh-host/id_rsa:ro"
  // ],
  "customizations": {
    "vscode": {
      "extensions": [
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "michelemelluso.code-beautifier",
        "wwm.better-align",
        "aaron-bond.better-comments",
        "oderwat.indent-rainbow",
        "k--kato.intellij-idea-keybindings",
        "PKief.material-icon-theme",
        "redhat.vscode-yaml",
        "DotJoshJohnson.xml"
      ]
    }
  }
}